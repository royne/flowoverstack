<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title"><strong><%= @question.title.capitalize %></strong></h5>
        </div>
        <div class="card-body">
          <%= @question.body %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- comentaros de respuestas -->

<%= render 'partials/comments-question' %>

<!-- respuestas -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <% unless @question.answers.empty? %>
        <h3><%= @question.answers.size %> Respuesta(s)</h3>
        <% @question.answers.each do |answer| %>
          <div class="card">
            <div class="card-body">
              <%= answer.body %>
            </div>
          </div>
          <!-- comrentarios de respuesta -->
          <div class="row justify-content-center">
            <div class="col-sm-6">
              <div class="card">
                <div class="card-body">
                  <% answer.comments.each do |comment| %>
                    <%= comment.text %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <!-- crear comentarios de preguntas -->

            <div class="row justify-content-center">
              <div class="col-sm-6">
                <% if signed_in? %>
                  <br><h5>Publicar Comentario</h5>
                  <%= form_for @comment, url: "/answers/#{answer.id}/commentanswer" do |f| %>
                    <div class="form-group">
                      <%= f.text_area :text, placeholder: "Ingrese un comentario", class: "form-control"%>
                    </div>

                    <div class="form-group">
                      <%= f.submit "Publicar", class: "btn btn-dark" %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>


        <% end %>
      <% end %>
    </div>
  </div>
</div>
<!-- crear respuestas -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <% if signed_in? %>
        <br><h5>Publicar respuesta</h5>
        <%= form_for [@question, @question.answers.build] do |f| %>
          <div class="form-group">
            <%= f.text_area :body, placeholder: "Ingrese una respuesta", class: "form-control"%>
          </div>

          <div class="form-group">
            <%= f.submit "Publicar", class: "btn btn-dark" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
