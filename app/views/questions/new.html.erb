<div class="container">
  <div class="row justify-content-around">
    <div class="col-sm-6">
      <h1>nuevo producto</h1>
      <%= form_for @question do |f| %>
        <div class="form-group">
          <%= f.text_field :title, placeholder: "Ingrese el titulo de la pregunta", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_area :body, placeholder: "Ingrese la pregunta", rows: 5, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Publicar", class: "btn btn-secondary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
