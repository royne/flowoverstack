<div class="container body-top">
  <div class="row justify-content-around">
    <div class="col-sm-6">
      <h1>nuevo Pregunta</h1>
      <% if @question.errors.any? %>
        <div class="alert alert-danger">
          <ul>
           <% @question.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for @question do |f| %>
        <div class="form-group">
          <%= f.text_field :title, placeholder: "Ingrese el titulo de la pregunta", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_area :body, placeholder: "Ingrese la pregunta", rows: 5, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Publicar", class: "btn btn-secondary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
